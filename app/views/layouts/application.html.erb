<!DOCTYPE html>
<html>
<head>
  <title>TwitterDigest</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="user_nav">
      <% if current_user %>
        <div>
          Signed in: <%= current_user.nickname %>
        </div>
        <div>
          <%= link_to "Sign out", signout_path %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </div>
</body>
</html>
